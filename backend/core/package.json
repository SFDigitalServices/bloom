{
  "name": "@bloom-housing/backend-core",
  "version": "0.2.11",
  "description": "Listings service reference implementation for the Bloom affordable housing system",
  "author": "Marcin Jedras <marcin.jedras@exygy.com>",
  "private": false,
  "license": "GPL-3.0",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && nest build",
    "start": "yarn run build && node dist/src/main",
    "dev": "NODE_ENV=development nest start --watch",
    "debug": "nest start --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "typeorm-test": "ts-node ./node_modules/.bin/typeorm --config ./ormconfig.test.ts",
    "herokusetup": "node heroku.setup.js",
    "seed:test": "ts-node src/seed.ts --test",
    "seed": "ts-node src/seed.ts",
    "generate:client": "ts-node generate-axios-client.ts"
  },
  "dependencies": {
    "@bloom-housing/core": "^0.2.11",
    "@nestjs/cli": "^7.4.1",
    "@nestjs/common": "^7.3.2",
    "@nestjs/core": "^7.3.2",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.3.2",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/typeorm": "^7.1.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "jsonpath": "^1.0.2",
    "nanoid": "^3.1.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^8.6.2",
    "typeorm": "^0.2.24",
    "typeorm-naming-strategies": "^1.1.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.3.2",
    "@types/express": "^4.17.7",
    "@types/node": "^12.12.50",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "fishery": "^0.3.0",
    "jest": "^25.1.0",
    "supertest": "^4.0.2",
    "swagger-axios-codegen": "^0.11.5",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "yargs": "^15.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "12",
    "yarn": "^1.22"
  }
}
